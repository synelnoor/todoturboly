%h1 Listing tasks

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Status
      %th Created at
      %th Due date
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.status
        %td= task.created_at
        %td= task.due_date
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
