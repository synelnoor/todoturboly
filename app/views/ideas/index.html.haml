%p#notice= notice
%h1 Ideas
%table
  %thead
    %tr
      %th Name
      %th Description
      %th Picture
      %th{:colspan => "3"}
  %tbody
    - @ideas.each do |idea|
      %tr
        %td= idea.name
        %td= idea.description
        %td= image_tag idea.picture_url, width: '100%' if idea.picture.present?
        %td= link_to 'Show', idea
        %td= link_to 'Edit', edit_idea_path(idea)
        %td= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Idea', new_idea_path
